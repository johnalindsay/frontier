
@model WebApplication2.UserAccounts
    
        <body>
              <section class="article">
                    <header class="grid">
                        <div class="title-container">
                            <h1>Coding Test</h1>
                        </div>
                    </header>
                    <main class="content grid" id="home-content">
                        <div class="content-title-container">
                            <h2>Accounts</h2>
                        </div>
                        <section class="grid" id="account-grid">
                            <section class="account-column grid" id="active-account-column">
                                <div class="account-container-title" id="active-account-container-title">
                                    <h3>Active</h3>
                                </div>
                                <div class="account-container active-account">
                                    <div class="account-container active-account">
                                        <ul class="account-data-list">
                                            @foreach (UserAccounts CurrentAccount in Program.UserAccountsList)
                                            {
                                                @if (CurrentAccount.AccountStatusId == (int)AccountStatuses.Active)
                                                {
                                                    <li><label>Name:</label>$"{@CurrentAccount.LastName}, {@CurrentAccount.FirstName}"</li>
                                                    <li><label>Email:</label>@CurrentAccount.Email</li>
                                                    <li><label>Phone Number:</label>@CurrentAccount.PhoneNumber</li>
                                                    <li><label>Amount Due:</label>@CurrentAccount.FormattedAmountDue</li>
                                                    <li><label>Due Date:</label>@CurrentAccount.FormattedPaymentDueDate</li>
                                                    <hr />
                                                }
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </section>
                            <section class="account-column grid" id="overdue-account-column">
                                <div class="account-container-title" id="overdue-account-container-title">
                                    <h3>Overdue</h3>
                                </div>
                                <div class="account-container overdue-account">
                                    <ul class="account-data-list">
                                        @foreach (UserAccounts CurrentAccount in Program.UserAccountsList)
                                        {
                                            @if (CurrentAccount.AccountStatusId == (int)AccountStatuses.Overdue)
                                            {
                                                <li><label>Name:</label>$"{@CurrentAccount.LastName}, {@CurrentAccount.FirstName}"</li>
                                                <li><label>Email:</label>@CurrentAccount.Email</li>
                                                <li><label>Phone Number:</label>@CurrentAccount.PhoneNumber</li>
                                                <li><label>Amount Due:</label>@CurrentAccount.FormattedAmountDue</li>
                                                <li><label>Due Date:</label>@CurrentAccount.FormattedPaymentDueDate</li>
                                                <hr />
                                            }
                                        }
                                    </ul>
                                </div>
                            </section>
                            <section class="account-column grid" id="inactive-account-column">
                                <div class="account-container-title" id="inactive-account-container-title">
                                    <h3>Inactive</h3>
                                </div>
                                <div class="account-container inactive-account">
                                    <ul class="account-data-list">
                                        @foreach (UserAccounts CurrentAccount in Program.UserAccountsList)
                                        {
                                            @if (CurrentAccount.AccountStatusId == (int)AccountStatuses.Inactive)
                                            {
                                                <li><label>Name:</label>$"{@CurrentAccount.LastName}, {@CurrentAccount.FirstName}"</li>
                                                <li><label>Email:</label>@CurrentAccount.Email</li>
                                                <li><label>Phone Number:</label>@CurrentAccount.PhoneNumber</li>
                                                <li><label>Amount Due:</label>@CurrentAccount.FormattedAmountDue</li>
                                                @if (CurrentAccount.DTPaymentDueDate != DateTimeOffset.MinValue)
                                                {
                                                    <li><label>Due Date:</label>@CurrentAccount.FormattedPaymentDueDate</li>
                                                }
                                                <hr />
                                            }
                                        }
                                    </ul>
                                </div>
                            </section>
                        </section>
                    </main>
                    <footer class="grid">
                        <p class="copy">
                            &copy;
                            <script>document.write(new Date().getFullYear())</script>
                        </p>
                    </footer>
                </section>
             </article>
</body>
